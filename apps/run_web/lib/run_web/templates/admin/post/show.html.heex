<h1>Show Post</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @post.author %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.admin_blogs_post_path(@conn, :edit, @post) %></span> |
<span><%= link "Back", to: Routes.admin_blogs_post_path(@conn, :index) %></span>
